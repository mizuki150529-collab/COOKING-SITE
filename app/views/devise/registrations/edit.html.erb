<%= stylesheet_link_tag "devise_edit", media: "all" %>

<div class="auth-page">
  <div class="auth-card">
    <h1 class="auth-title">アカウント編集</h1>
    <p class="auth-sub">プロフィールやメールアドレス、パスワードを変更できます。</p>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "auth-form" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <!-- name / profile を使ってるなら（許可済みなのでここで編集できるようにする） -->
      <div class="field">
        <%= f.label :name, "名前", class: "label" %>
        <%= f.text_field :name, autocomplete: "name", class: "input" %>
      </div>

      <div class="field">
        <%= f.label :profile, "プロフィール", class: "label" %>
        <%= f.text_area :profile, rows: 3, class: "textarea" %>
      </div>

      <div class="field">
        <%= f.label :email, "メールアドレス", class: "label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p class="notice-box">
          現在、<%= resource.unconfirmed_email %> へのメールアドレス変更確認待ちです。
        </p>
      <% end %>

      <div class="field">
        <%= f.label :password, "新しいパスワード（変更しない場合は空欄）", class: "label" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "input" %>

        <% if @minimum_password_length %>
          <p class="hint"><%= @minimum_password_length %>文字以上</p>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "新しいパスワード（確認）", class: "label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input" %>
      </div>

      <div class="field">
        <%= f.label :current_password, "現在のパスワード（更新のため必須）", class: "label" %>
        <%= f.password_field :current_password, autocomplete: "current-password", class: "input" %>
      </div>

      <div class="actions">
        <%= f.submit "更新する", class: "btn-primary" %>
        <%= link_to "マイページに戻る", user_path, class: "btn-ghost" %>
      </div>
    <% end %>

    <hr class="divider">

    <div class="danger-zone">
      <h2 class="danger-title">退会</h2>
      <p class="danger-text">アカウントを削除すると、元に戻せません。</p>

      <%= button_to "退会する",
            registration_path(resource_name),
            method: :delete,
            data: { turbo_confirm: "本当に退会しますか？" },
            class: "btn-danger" %>
    </div>
  </div>
</div>
