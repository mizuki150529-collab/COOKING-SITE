<% content_for :head do %>
  <%= stylesheet_link_tag "devise_page", media: "all", "data-turbo-track": "reload" %>
<% end %>

<div class="auth-page">
  <div class="auth-card">
    <h2 class="auth-title">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "auth-form" }) do |f| %>
      <div>
        <%= f.email_field :email,
              autofocus: true,
              autocomplete: "email",
              class: "auth-input",
              placeholder: "Enter Your Email" %>
      </div>

      <div>
        <%= f.password_field :password,
              autocomplete: "current-password",
              class: "auth-input",
              placeholder: "Enter Your Password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="auth-remember">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, "Remember me" %>
        </div>
      <% end %>

      <%= f.submit "Log in", class: "auth-btn" %>
    <% end %>

    <div class="auth-links">
      <%= link_to "Sign up", new_user_registration_path %><br>
      <%= link_to "Forgot your password?", new_user_password_path %>
    </div>
  </div>
</div>
