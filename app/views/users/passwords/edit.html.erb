<% content_for :head do %>
  <%= stylesheet_link_tag "devise_page", media: "all", "data-turbo-track": "reload" %>
<% end %>

<div class="auth-page">
  <div class="auth-card">
    <h3 class="auth-title">パスワード変更</h3>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name),
          html: { method: :put, class: "auth-form" }) do |f| %>

      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="field">
        <%= f.label :password, "New password", class: "auth-label" %>
        <% if @minimum_password_length %>
          <p class="auth-hint"><%= @minimum_password_length %> characters minimum</p>
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "auth-input" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "Confirm new password", class: "auth-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "auth-input" %>
      </div>

      <div class="actions">
        <%= f.submit "Change my password", class: "auth-btn" %>
      </div>
    <% end %>

    <div class="auth-links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
